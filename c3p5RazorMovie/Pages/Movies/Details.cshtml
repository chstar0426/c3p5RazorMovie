@page
@model c3p5RazorMovie.Pages.Movies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Gener)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Gener)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Price)
        </dd>
    </dl>
</div>
<div class="btn-group" role="group" aria-label="Basic example">
    <a asp-page="./Edit" asp-route-id="@Model.Movie.ID" asp-route-path="@(Request.Query["Path"].ToString())" class="btn btn-outline-primary">수정</a>
    <a asp-page="./Delete" asp-route-id="@Model.Movie.ID" asp-route-path="@(Request.Query["Path"].ToString())" class="btn btn-outline-danger">삭제</a>
    <a href='./Index@(Request.Query["Path"].ToString())' class="btn btn-outline-secondary">목록</a>

</div>